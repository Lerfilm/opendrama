// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// NextAuth.js v5 模型
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  coins         Int       @default(0) // 金币余额
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts        Account[]
  sessions        Session[]
  purchases       Purchase[]
  episodeUnlocks  EpisodeUnlock[]
  watchEvents     WatchEvent[]
  userCards       UserCard[]
  scripts         Script[]
  aiJobs          AIJob[]
  seriesLikes     SeriesLike[]
  seriesFavorites SeriesFavorite[]
  seriesRatings   SeriesRating[]
  seriesComments  SeriesComment[]
  balance         UserBalance?
  tokenTransactions TokenTransaction[]
  publishedScripts  PublishedScript[]
  achievementCards  AchievementCard[]
  series            Series[]
  rehearsals        Rehearsal[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// 支付记录
model Purchase {
  id              String   @id @default(cuid())
  userId          String
  stripeSessionId String   @unique
  amount          Int      // 金额（分）
  coins           Int      // 购买的金币数量
  status          String   @default("pending") // pending, completed, failed
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("purchases")
}

// 剧集系列
model Series {
  id          String    @id @default(cuid())
  title       String
  description String?   @db.Text
  synopsis    String?   @db.Text    // 完整简介 (from Script.synopsis)
  coverUrl    String?
  coverTall   String?               // 竖版海报 (3:4)
  coverWide   String?               // 横版封面 (16:9)
  genre       String?   // romance, thriller, fantasy, comedy, drama, horror, action, mystery
  tags        String?   @db.Text  // JSON: ["Love Triangle", "Hidden Identity", "Billionaire"]
  viewCount   Int       @default(0) // 总浏览量
  status      String    @default("active") // active, archived
  userId      String?               // 创作者/导演
  scriptId    String?   @unique     // 关联源 Script
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user      User?     @relation(fields: [userId], references: [id])
  script    Script?   @relation("SeriesScript", fields: [scriptId], references: [id])
  episodes  Episode[]
  cards     Card[]
  likes     SeriesLike[]
  favorites SeriesFavorite[]
  ratings   SeriesRating[]
  comments  SeriesComment[]

  @@index([userId])
  @@map("series")
}

// 系列点赞
model SeriesLike {
  id        String   @id @default(cuid())
  seriesId  String
  userId    String
  createdAt DateTime @default(now())

  series Series @relation(fields: [seriesId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, seriesId])
  @@index([seriesId])
  @@map("series_likes")
}

// 系列收藏
model SeriesFavorite {
  id        String   @id @default(cuid())
  seriesId  String
  userId    String
  createdAt DateTime @default(now())

  series Series @relation(fields: [seriesId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, seriesId])
  @@index([seriesId])
  @@map("series_favorites")
}

// 系列评分
model SeriesRating {
  id        String   @id @default(cuid())
  seriesId  String
  userId    String
  rating    Int      // 1-5
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  series Series @relation(fields: [seriesId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, seriesId])
  @@index([seriesId])
  @@map("series_ratings")
}

// 系列评论
model SeriesComment {
  id        String   @id @default(cuid())
  seriesId  String
  userId    String
  content   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  series Series @relation(fields: [seriesId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([seriesId, createdAt])
  @@index([userId])
  @@map("series_comments")
}

// 单集
model Episode {
  id           String   @id @default(cuid())
  seriesId     String
  episodeNum   Int      // 第几集
  title        String
  description  String?  @db.Text
  thumbnailUrl String?
  muxAssetId   String?  @unique // Mux 视频资产 ID
  muxPlaybackId String? @unique // Mux 播放 ID
  duration     Int?     // 时长（秒）
  unlockCost   Int      @default(10) // 解锁所需金币
  status       String   @default("active") // active, archived
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  series         Series          @relation(fields: [seriesId], references: [id], onDelete: Cascade)
  episodeUnlocks EpisodeUnlock[]
  watchEvents    WatchEvent[]

  @@unique([seriesId, episodeNum])
  @@index([seriesId])
  @@map("episodes")
}

// 用户解锁记录
model EpisodeUnlock {
  id        String   @id @default(cuid())
  userId    String
  episodeId String
  coinsCost Int      // 花费的金币
  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  episode Episode @relation(fields: [episodeId], references: [id], onDelete: Cascade)

  @@unique([userId, episodeId])
  @@index([userId])
  @@index([episodeId])
  @@map("episode_unlocks")
}

// 观看事件（留存分析）
model WatchEvent {
  id            String   @id @default(cuid())
  userId        String
  episodeId     String
  watchPosition Int      // 观看位置（秒）
  watchDuration Int      // 本次观看时长（秒）
  completedRate Float    @default(0) // 完成率 (0-1)
  source        String?  // 来源：web, ios, android
  createdAt     DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  episode Episode @relation(fields: [episodeId], references: [id], onDelete: Cascade)

  @@index([userId, episodeId])
  @@index([createdAt])
  @@map("watch_events")
}

// 卡牌
model Card {
  id          String   @id @default(cuid())
  seriesId    String
  name        String
  rarity      String   @default("common") // common, rare, epic, legendary
  imageUrl    String
  description String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  series    Series     @relation(fields: [seriesId], references: [id], onDelete: Cascade)
  userCards UserCard[]

  @@index([seriesId])
  @@map("cards")
}

// 用户卡牌
model UserCard {
  id        String   @id @default(cuid())
  userId    String
  cardId    String
  quantity  Int      @default(1) // 拥有数量
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  card Card @relation(fields: [cardId], references: [id], onDelete: Cascade)

  @@unique([userId, cardId])
  @@index([userId])
  @@map("user_cards")
}

// ============================================
// 创作端 - 编剧工坊
// ============================================

// AI 剧本
model Script {
  id             String   @id @default(cuid())
  userId         String
  title          String
  genre          String   @default("drama") // drama, comedy, romance, thriller, scifi, fantasy
  format         String   @default("shortdrama") // shortdrama, movie, animation, stageplay
  logline        String?  @db.Text
  synopsis       String?  @db.Text
  coverImage     String?
  coverWide      String?  // 宽版封面 16:9
  coverTall      String?  // 窄版封面 3:4
  targetEpisodes Int      @default(10)
  language       String   @default("zh")
  status         String   @default("draft") // draft, generating, completed, ready, producing, published
  metadata       String?  @db.Text // JSON
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  deletedAt      DateTime? // soft-delete: set when user deletes, purge after 30 days

  user          User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  scenes        ScriptScene[]
  roles         ScriptRole[]
  jobs          AIJob[]
  videoSegments VideoSegment[]
  published     PublishedScript?
  seriesLink    Series?           @relation("SeriesScript")
  locations     ScriptLocation[]
  props         ScriptProp[]

  @@index([userId])
  @@index([status])
  @@index([deletedAt])
  @@map("scripts")
}

// 剧本场景/分集
model ScriptScene {
  id              String   @id @default(cuid())
  scriptId        String
  episodeNum      Int
  sceneNum        Int      @default(1)
  heading         String?  // INT. 办公室 - 白天
  action          String?  @db.Text
  dialogue        String?  @db.Text // JSON: [{character, line, direction}]
  stageDirection  String?  @db.Text
  mood            String?  // 场景情绪氛围
  location        String?  // 拍摄地点
  timeOfDay       String?  // 时间段
  promptHint      String?  @db.Text // 给视频生成的镜头提示
  referenceImage  String?  // Auto-generated panoramic reference photo (16:9)
  duration        Int?
  sortOrder       Int      @default(0)
  // Pre-computed during import — eliminates repeated JSON parsing in AI routes
  characters      String[] // UPPERCASE names with dialogue in this scene
  actionPlainText String?  @db.Text // plain text extracted from action JSON blocks
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  script Script @relation(fields: [scriptId], references: [id], onDelete: Cascade)

  @@index([scriptId])
  @@index([scriptId, episodeNum])
  @@map("script_scenes")
}

// 剧本角色
model ScriptRole {
  id              String   @id @default(cuid())
  scriptId        String
  name            String
  role            String   @default("supporting") // protagonist, antagonist, supporting, minor
  description     String?  @db.Text
  voiceType       String?
  avatarUrl       String?
  referenceImages String[] // 角色参考图 URL 数组
  metadata        String?  @db.Text // JSON
  // Pre-computed during import — eliminates 30-50 scene fetches per AI generation call
  storyline       String?  @db.Text // JSON: [{key,sceneId,heading,location,timeOfDay,mood,lines[],actions[]}]
  castingSpecs    String?  @db.Text // JSON: {age,gender,height,ethnicity,nationality,physique}
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  script Script @relation(fields: [scriptId], references: [id], onDelete: Cascade)

  @@index([scriptId])
  @@map("script_roles")
}

// 拍摄场地（导入时自动预建 + extract-locations 补充）
model ScriptLocation {
  id          String   @id @default(cuid())
  scriptId    String
  name        String            // 大写标准化，如 "OFFICE"、"COFFEE SHOP"
  type        String   @default("INT")  // INT | EXT | INT/EXT
  description String?  @db.Text
  address     String?
  contact     String?
  notes       String?  @db.Text
  sceneKeys   String[]          // 预计算的场景 key 列表 ["E1S2", "E1S5"]
  sceneData   String?  @db.Text // JSON: [{key,heading,mood,timeOfDay,actionSummary}]
  photoUrl    String?           // 生成的场地照片 URL（最新一张，用于重生成一致性）
  photoPrompt String?  @db.Text // 上次生成时使用的 prompt（用于一致性重生成）
  photos      String?  @db.Text // JSON: [{url, note?, isApproved?}]
  timeSlots   String?  @db.Text // JSON: [{timeOfDay, mood?, sceneNums?, setNotes?}]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  script Script @relation(fields: [scriptId], references: [id], onDelete: Cascade)

  @@unique([scriptId, name])
  @@index([scriptId])
  @@map("script_locations")
}

// 道具（extract-props 提取后持久化）
model ScriptProp {
  id          String   @id @default(cuid())
  scriptId    String
  name        String
  category    String   @default("other") // furniture|wardrobe|vehicle|food|weapon|electronic|document|other
  description String?  @db.Text
  isKey       Boolean  @default(false)   // 是否关键道具（影响剧情）
  quantity    Int?
  source      String?                    // rent|buy|make|found
  notes       String?  @db.Text
  sceneKeys   String[]                   // 预计算的出现场景 key
  sceneData   String?  @db.Text          // JSON: [{key,heading,usage}]
  photoUrl    String?                    // 最新一张照片 URL
  photoPrompt String?  @db.Text
  photos      String?  @db.Text          // JSON: [{url, note?, isApproved?}]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  script Script @relation(fields: [scriptId], references: [id], onDelete: Cascade)

  @@index([scriptId])
  @@map("script_props")
}

// AI 任务队列
model AIJob {
  id          String    @id @default(cuid())
  scriptId    String?
  userId      String
  type        String    // script_generate, dialogue_enhance, voice_generate, image_generate, video_compose
  status      String    @default("pending") // pending, processing, completed, failed
  input       String?   @db.Text // JSON
  output      String?   @db.Text // JSON
  error       String?   @db.Text
  progress    Int       @default(0) // 0-100
  cost        Int       @default(0)
  startedAt   DateTime?
  completedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  script  Script?  @relation(fields: [scriptId], references: [id], onDelete: SetNull)
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([scriptId])
  @@map("ai_jobs")
}

// ============================================
// 视频生成
// ============================================

// 视频片段
model VideoSegment {
  id              String    @id @default(cuid())
  scriptId        String
  episodeNum      Int       // 对应 ScriptScene.episodeNum
  segmentIndex    Int       // 片段序号 0-based
  sceneNum        Int       @default(0)  // 所属 scene 编号（1-based，对应 ScriptScene.sceneNum）
  durationSec     Int       @default(15)
  prompt          String    @db.Text
  shotType        String?   // wide | medium | close-up | extreme-close-up
  cameraMove      String?   // static | pan | tilt | dolly | tracking | orbit
  beatType        String?   // hook | establish | confrontation | escalation | emotional_peak | reaction | reveal | action | breath | cliffhanger
  referenceImages String[]
  referenceVideo  String?

  // 生成参数
  model           String?   // seedance_2_0 | seedance_1_5_pro | jimeng_3_0_pro | jimeng_3_0 | jimeng_s2_pro
  resolution      String?   // 1080p | 720p

  // 生成结果
  status          String    @default("pending") // pending | reserved | submitted | generating | done | failed
  providerTaskId  String?
  videoUrl        String?   // Provider URL (Volcengine TOS) — may expire
  thumbnailUrl    String?
  tokenCost       Int?
  apiCostCents    Int?
  errorMessage    String?

  // Mux 永久存储 (上传后可直接用 HLS 播放)
  muxAssetId      String?   // Mux Asset ID
  muxPlaybackId   String?   // Mux Playback ID for HLS streaming

  // 链式生成
  chainMode       Boolean   @default(false)  // 是否链式生成模式
  seedImageUrl    String?                    // 本 clip 的 I2V 起始图（base64 data URL 或 https URL）

  createdAt       DateTime  @default(now())
  completedAt     DateTime?

  script          Script    @relation(fields: [scriptId], references: [id], onDelete: Cascade)

  @@unique([scriptId, episodeNum, segmentIndex])
  @@index([scriptId])
  @@index([scriptId, episodeNum])
  @@index([status])
  @@map("video_segments")
}

// ============================================
// 金币系统（预扣/确认/退还）
// ============================================

// 用户金币余额
model UserBalance {
  id             String @id @default(cuid())
  userId         String @unique
  balance        Int    @default(0)     // 当前可用余额
  reserved       Int    @default(0)     // 预扣冻结
  totalPurchased Int    @default(0)     // 累计充值
  totalConsumed  Int    @default(0)     // 累计消耗

  user           User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_balances")
}

// 金币交易记录
model TokenTransaction {
  id          String   @id @default(cuid())
  userId      String
  type        String   // purchase | consume | refund | reserve | release | bonus
  amount      Int      // 正数=增加，负数=减少
  balanceAfter Int
  description String?
  metadata    Json?    // {model, resolution, segmentId, stripePaymentId, ...}
  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([type])
  @@map("token_transactions")
}

// ============================================
// 发布 & 社区
// ============================================

// 已发布的作品（关联 Script）
model PublishedScript {
  id              String    @id @default(cuid())
  scriptId        String    @unique
  userId          String
  status          String    @default("published") // published | featured | unlisted
  publishedAt     DateTime  @default(now())
  viewCount       Int       @default(0)
  likeCount       Int       @default(0)
  commentCount    Int       @default(0)
  ratingSum       Int       @default(0)
  ratingCount     Int       @default(0)
  recommendScore  Float     @default(0)
  tags            String[]
  featuredAt      DateTime?

  script          Script          @relation(fields: [scriptId], references: [id], onDelete: Cascade)
  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  achievementCard AchievementCard?

  @@index([userId])
  @@index([status, recommendScore])
  @@index([publishedAt])
  @@map("published_scripts")
}

// ============================================
// AI 功能定价配置
// ============================================

// AI功能的coin费用，由管理员在后台配置
model AiFeaturePrice {
  id          String   @id @default(cuid())
  featureKey  String   @unique  // e.g. "extract_props", "extract_locations", "generate_script"
  label       String            // 显示名称, e.g. "Props AI Extract"
  costCoins   Int      @default(1)  // 每次调用扣除的 coins
  description String?           // 说明文字
  enabled     Boolean  @default(true)
  updatedAt   DateTime @updatedAt

  @@map("ai_feature_prices")
}

// ============================================
// 成就卡系统
// ============================================

// 成就卡
model AchievementCard {
  id                String    @id @default(cuid())
  userId            String
  publishedScriptId String    @unique // 每部剧只有一张成就卡
  cardImage         String    // 卡面图片 URL（窄版封面 coverTall）
  rarity            String    @default("common") // common | rare | epic | legendary
  title             String    // 剧名
  subtitle          String?   // 副标题（如 "First Creation" "10-Episode Epic"）
  earnedAt          DateTime  @default(now())
  viewCount         Int       @default(0) // 被浏览次数

  user              User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  publishedScript   PublishedScript @relation(fields: [publishedScriptId], references: [id], onDelete: Cascade)

  @@index([userId, earnedAt])
  @@map("achievement_cards")
}

// ============================================
// Rehearsal — 独立视频生成试验台
// ============================================

model Rehearsal {
  id             String    @id @default(cuid())
  userId         String
  prompt         String    @db.Text
  model          String    @default("seedance_2_0")
  resolution     String    @default("720p")
  durationSec    Int       @default(5)

  // 生成结果
  status         String    @default("draft") // draft | reserved | submitted | generating | done | failed
  providerTaskId String?
  videoUrl       String?
  thumbnailUrl   String?
  tokenCost      Int?
  errorMessage   String?

  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  completedAt    DateTime?

  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([status])
  @@map("rehearsals")
}
