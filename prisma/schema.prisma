// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// NextAuth.js v5 模型
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  coins         Int       @default(0) // 金币余额
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  purchases     Purchase[]
  episodeUnlocks EpisodeUnlock[]
  watchEvents   WatchEvent[]
  userCards     UserCard[]
  scripts       Script[]
  aiJobs        AIJob[]
  theaters      Theater[]      @relation("theaterCreator")
  theaterVotes  TheaterVote[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// 支付记录
model Purchase {
  id              String   @id @default(cuid())
  userId          String
  stripeSessionId String   @unique
  amount          Int      // 金额（分）
  coins           Int      // 购买的金币数量
  status          String   @default("pending") // pending, completed, failed
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("purchases")
}

// 剧集系列
model Series {
  id          String    @id @default(cuid())
  title       String
  description String?   @db.Text
  coverUrl    String?
  status      String    @default("active") // active, archived
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  episodes Episode[]
  cards    Card[]

  @@map("series")
}

// 单集
model Episode {
  id           String   @id @default(cuid())
  seriesId     String
  episodeNum   Int      // 第几集
  title        String
  description  String?  @db.Text
  thumbnailUrl String?
  muxAssetId   String?  @unique // Mux 视频资产 ID
  muxPlaybackId String? @unique // Mux 播放 ID
  duration     Int?     // 时长（秒）
  unlockCost   Int      @default(10) // 解锁所需金币
  status       String   @default("active") // active, archived
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  series         Series          @relation(fields: [seriesId], references: [id], onDelete: Cascade)
  episodeUnlocks EpisodeUnlock[]
  watchEvents    WatchEvent[]

  @@unique([seriesId, episodeNum])
  @@index([seriesId])
  @@map("episodes")
}

// 用户解锁记录
model EpisodeUnlock {
  id        String   @id @default(cuid())
  userId    String
  episodeId String
  coinsCost Int      // 花费的金币
  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  episode Episode @relation(fields: [episodeId], references: [id], onDelete: Cascade)

  @@unique([userId, episodeId])
  @@index([userId])
  @@index([episodeId])
  @@map("episode_unlocks")
}

// 观看事件（留存分析）
model WatchEvent {
  id            String   @id @default(cuid())
  userId        String
  episodeId     String
  watchPosition Int      // 观看位置（秒）
  watchDuration Int      // 本次观看时长（秒）
  completedRate Float    @default(0) // 完成率 (0-1)
  source        String?  // 来源：web, ios, android
  createdAt     DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  episode Episode @relation(fields: [episodeId], references: [id], onDelete: Cascade)

  @@index([userId, episodeId])
  @@index([createdAt])
  @@map("watch_events")
}

// 卡牌
model Card {
  id          String   @id @default(cuid())
  seriesId    String
  name        String
  rarity      String   @default("common") // common, rare, epic, legendary
  imageUrl    String
  description String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  series    Series     @relation(fields: [seriesId], references: [id], onDelete: Cascade)
  userCards UserCard[]

  @@index([seriesId])
  @@map("cards")
}

// 用户卡牌
model UserCard {
  id        String   @id @default(cuid())
  userId    String
  cardId    String
  quantity  Int      @default(1) // 拥有数量
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  card Card @relation(fields: [cardId], references: [id], onDelete: Cascade)

  @@unique([userId, cardId])
  @@index([userId])
  @@map("user_cards")
}

// ============================================
// 创作端 - 编剧工坊
// ============================================

// AI 剧本
model Script {
  id             String   @id @default(cuid())
  userId         String
  title          String
  genre          String   @default("drama") // drama, comedy, romance, thriller, scifi, fantasy
  format         String   @default("shortdrama") // shortdrama, movie, stageplay
  logline        String?  @db.Text
  synopsis       String?  @db.Text
  targetEpisodes Int      @default(10)
  language       String   @default("zh")
  status         String   @default("draft") // draft, generating, completed, published
  metadata       String?  @db.Text // JSON
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user   User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  scenes ScriptScene[]
  roles  ScriptRole[]
  jobs   AIJob[]

  @@index([userId])
  @@index([status])
  @@map("scripts")
}

// 剧本场景/分集
model ScriptScene {
  id             String   @id @default(cuid())
  scriptId       String
  episodeNum     Int
  sceneNum       Int      @default(1)
  heading        String?  // INT. 办公室 - 白天
  action         String?  @db.Text
  dialogue       String?  @db.Text // JSON: [{character, line, direction}]
  stageDirection String?  @db.Text
  duration       Int?
  sortOrder      Int      @default(0)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  script Script @relation(fields: [scriptId], references: [id], onDelete: Cascade)

  @@index([scriptId])
  @@index([scriptId, episodeNum])
  @@map("script_scenes")
}

// 剧本角色
model ScriptRole {
  id          String   @id @default(cuid())
  scriptId    String
  name        String
  role        String   @default("supporting") // protagonist, antagonist, supporting, minor
  description String?  @db.Text
  voiceType   String?
  avatarUrl   String?
  metadata    String?  @db.Text // JSON
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  script Script @relation(fields: [scriptId], references: [id], onDelete: Cascade)

  @@index([scriptId])
  @@map("script_roles")
}

// AI 任务队列
model AIJob {
  id          String    @id @default(cuid())
  scriptId    String?
  theaterId   String?
  userId      String
  type        String    // script_generate, dialogue_enhance, voice_generate, image_generate, video_compose
  status      String    @default("pending") // pending, processing, completed, failed
  input       String?   @db.Text // JSON
  output      String?   @db.Text // JSON
  error       String?   @db.Text
  progress    Int       @default(0) // 0-100
  cost        Int       @default(0)
  startedAt   DateTime?
  completedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  script  Script?  @relation(fields: [scriptId], references: [id], onDelete: SetNull)
  theater Theater? @relation(fields: [theaterId], references: [id], onDelete: SetNull)
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([scriptId])
  @@index([theaterId])
  @@map("ai_jobs")
}

// ============================================
// 互动端 - AI 剧场
// ============================================

// AI 剧场
model Theater {
  id          String   @id @default(cuid())
  creatorId   String
  title       String
  description String?  @db.Text
  coverUrl    String?
  genre       String   @default("drama")
  scenario    String?  @db.Text // JSON: 初始剧情设定
  characters  String?  @db.Text // JSON: [{name, personality, avatar}]
  maxViewers  Int      @default(100)
  status      String   @default("draft") // draft, live, paused, ended, archived
  isPublic    Boolean  @default(true)
  totalVotes  Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  creator  User              @relation("theaterCreator", fields: [creatorId], references: [id], onDelete: Cascade)
  sessions TheaterSession[]
  messages TheaterMessage[]
  votes    TheaterVote[]
  jobs     AIJob[]

  @@index([creatorId])
  @@index([status])
  @@map("theaters")
}

// 剧场会话/幕
model TheaterSession {
  id             String    @id @default(cuid())
  theaterId      String
  sessionNum     Int
  title          String?
  narrative      String?   @db.Text
  status         String    @default("active") // active, voting, resolved, ended
  votingEndsAt   DateTime?
  chosenOptionId String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  theater  Theater              @relation(fields: [theaterId], references: [id], onDelete: Cascade)
  messages TheaterMessage[]
  options  TheaterVoteOption[]

  @@index([theaterId])
  @@index([theaterId, sessionNum])
  @@map("theater_sessions")
}

// 剧场消息
model TheaterMessage {
  id          String   @id @default(cuid())
  theaterId   String
  sessionId   String
  role        String   // narrator, character, system
  character   String?
  content     String   @db.Text
  messageType String   @default("dialogue") // dialogue, narration, action, choice_prompt
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())

  theater Theater        @relation(fields: [theaterId], references: [id], onDelete: Cascade)
  session TheaterSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([theaterId])
  @@index([sessionId])
  @@map("theater_messages")
}

// 投票选项
model TheaterVoteOption {
  id          String   @id @default(cuid())
  sessionId   String
  label       String
  description String?  @db.Text
  voteCount   Int      @default(0)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())

  session TheaterSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  votes   TheaterVote[]

  @@index([sessionId])
  @@map("theater_vote_options")
}

// 用户投票
model TheaterVote {
  id        String   @id @default(cuid())
  theaterId String
  optionId  String
  userId    String
  createdAt DateTime @default(now())

  theater Theater           @relation(fields: [theaterId], references: [id], onDelete: Cascade)
  option  TheaterVoteOption @relation(fields: [optionId], references: [id], onDelete: Cascade)
  user    User              @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, optionId])
  @@index([theaterId])
  @@index([optionId])
  @@map("theater_votes")
}
