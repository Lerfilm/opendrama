// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// NextAuth.js v5 模型
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  coins         Int       @default(0) // 金币余额
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts        Account[]
  sessions        Session[]
  purchases       Purchase[]
  episodeUnlocks  EpisodeUnlock[]
  watchEvents     WatchEvent[]
  userCards       UserCard[]
  scripts         Script[]
  aiJobs          AIJob[]
  seriesLikes     SeriesLike[]
  seriesFavorites SeriesFavorite[]
  seriesRatings   SeriesRating[]
  seriesComments  SeriesComment[]
  balance         UserBalance?
  tokenTransactions TokenTransaction[]
  publishedScripts  PublishedScript[]
  achievementCards  AchievementCard[]
  series            Series[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// 支付记录
model Purchase {
  id              String   @id @default(cuid())
  userId          String
  stripeSessionId String   @unique
  amount          Int      // 金额（分）
  coins           Int      // 购买的金币数量
  status          String   @default("pending") // pending, completed, failed
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("purchases")
}

// 剧集系列
model Series {
  id          String    @id @default(cuid())
  title       String
  description String?   @db.Text
  synopsis    String?   @db.Text    // 完整简介 (from Script.synopsis)
  coverUrl    String?
  coverTall   String?               // 竖版海报 (3:4)
  coverWide   String?               // 横版封面 (16:9)
  genre       String?   // romance, thriller, fantasy, comedy, drama, horror, action, mystery
  tags        String?   @db.Text  // JSON: ["Love Triangle", "Hidden Identity", "Billionaire"]
  viewCount   Int       @default(0) // 总浏览量
  status      String    @default("active") // active, archived
  userId      String?               // 创作者/导演
  scriptId    String?   @unique     // 关联源 Script
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user      User?     @relation(fields: [userId], references: [id])
  script    Script?   @relation("SeriesScript", fields: [scriptId], references: [id])
  episodes  Episode[]
  cards     Card[]
  likes     SeriesLike[]
  favorites SeriesFavorite[]
  ratings   SeriesRating[]
  comments  SeriesComment[]

  @@index([userId])
  @@map("series")
}

// 系列点赞
model SeriesLike {
  id        String   @id @default(cuid())
  seriesId  String
  userId    String
  createdAt DateTime @default(now())

  series Series @relation(fields: [seriesId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, seriesId])
  @@index([seriesId])
  @@map("series_likes")
}

// 系列收藏
model SeriesFavorite {
  id        String   @id @default(cuid())
  seriesId  String
  userId    String
  createdAt DateTime @default(now())

  series Series @relation(fields: [seriesId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, seriesId])
  @@index([seriesId])
  @@map("series_favorites")
}

// 系列评分
model SeriesRating {
  id        String   @id @default(cuid())
  seriesId  String
  userId    String
  rating    Int      // 1-5
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  series Series @relation(fields: [seriesId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, seriesId])
  @@index([seriesId])
  @@map("series_ratings")
}

// 系列评论
model SeriesComment {
  id        String   @id @default(cuid())
  seriesId  String
  userId    String
  content   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  series Series @relation(fields: [seriesId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([seriesId, createdAt])
  @@index([userId])
  @@map("series_comments")
}

// 单集
model Episode {
  id           String   @id @default(cuid())
  seriesId     String
  episodeNum   Int      // 第几集
  title        String
  description  String?  @db.Text
  thumbnailUrl String?
  muxAssetId   String?  @unique // Mux 视频资产 ID
  muxPlaybackId String? @unique // Mux 播放 ID
  duration     Int?     // 时长（秒）
  unlockCost   Int      @default(10) // 解锁所需金币
  status       String   @default("active") // active, archived
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  series         Series          @relation(fields: [seriesId], references: [id], onDelete: Cascade)
  episodeUnlocks EpisodeUnlock[]
  watchEvents    WatchEvent[]

  @@unique([seriesId, episodeNum])
  @@index([seriesId])
  @@map("episodes")
}

// 用户解锁记录
model EpisodeUnlock {
  id        String   @id @default(cuid())
  userId    String
  episodeId String
  coinsCost Int      // 花费的金币
  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  episode Episode @relation(fields: [episodeId], references: [id], onDelete: Cascade)

  @@unique([userId, episodeId])
  @@index([userId])
  @@index([episodeId])
  @@map("episode_unlocks")
}

// 观看事件（留存分析）
model WatchEvent {
  id            String   @id @default(cuid())
  userId        String
  episodeId     String
  watchPosition Int      // 观看位置（秒）
  watchDuration Int      // 本次观看时长（秒）
  completedRate Float    @default(0) // 完成率 (0-1)
  source        String?  // 来源：web, ios, android
  createdAt     DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  episode Episode @relation(fields: [episodeId], references: [id], onDelete: Cascade)

  @@index([userId, episodeId])
  @@index([createdAt])
  @@map("watch_events")
}

// 卡牌
model Card {
  id          String   @id @default(cuid())
  seriesId    String
  name        String
  rarity      String   @default("common") // common, rare, epic, legendary
  imageUrl    String
  description String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  series    Series     @relation(fields: [seriesId], references: [id], onDelete: Cascade)
  userCards UserCard[]

  @@index([seriesId])
  @@map("cards")
}

// 用户卡牌
model UserCard {
  id        String   @id @default(cuid())
  userId    String
  cardId    String
  quantity  Int      @default(1) // 拥有数量
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  card Card @relation(fields: [cardId], references: [id], onDelete: Cascade)

  @@unique([userId, cardId])
  @@index([userId])
  @@map("user_cards")
}

// ============================================
// 创作端 - 编剧工坊
// ============================================

// AI 剧本
model Script {
  id             String   @id @default(cuid())
  userId         String
  title          String
  genre          String   @default("drama") // drama, comedy, romance, thriller, scifi, fantasy
  format         String   @default("shortdrama") // shortdrama, movie, animation, stageplay
  logline        String?  @db.Text
  synopsis       String?  @db.Text
  coverImage     String?
  coverWide      String?  // 宽版封面 16:9
  coverTall      String?  // 窄版封面 3:4
  targetEpisodes Int      @default(10)
  language       String   @default("zh")
  status         String   @default("draft") // draft, generating, completed, ready, producing, published
  metadata       String?  @db.Text // JSON
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user          User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  scenes        ScriptScene[]
  roles         ScriptRole[]
  jobs          AIJob[]
  videoSegments VideoSegment[]
  published     PublishedScript?
  seriesLink    Series?           @relation("SeriesScript")

  @@index([userId])
  @@index([status])
  @@map("scripts")
}

// 剧本场景/分集
model ScriptScene {
  id             String   @id @default(cuid())
  scriptId       String
  episodeNum     Int
  sceneNum       Int      @default(1)
  heading        String?  // INT. 办公室 - 白天
  action         String?  @db.Text
  dialogue       String?  @db.Text // JSON: [{character, line, direction}]
  stageDirection String?  @db.Text
  mood           String?  // 场景情绪氛围
  location       String?  // 拍摄地点
  timeOfDay      String?  // 时间段
  promptHint     String?  @db.Text // 给视频生成的镜头提示
  duration       Int?
  sortOrder      Int      @default(0)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  script Script @relation(fields: [scriptId], references: [id], onDelete: Cascade)

  @@index([scriptId])
  @@index([scriptId, episodeNum])
  @@map("script_scenes")
}

// 剧本角色
model ScriptRole {
  id              String   @id @default(cuid())
  scriptId        String
  name            String
  role            String   @default("supporting") // protagonist, antagonist, supporting, minor
  description     String?  @db.Text
  voiceType       String?
  avatarUrl       String?
  referenceImages String[] // 角色参考图 URL 数组
  metadata        String?  @db.Text // JSON
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  script Script @relation(fields: [scriptId], references: [id], onDelete: Cascade)

  @@index([scriptId])
  @@map("script_roles")
}

// AI 任务队列
model AIJob {
  id          String    @id @default(cuid())
  scriptId    String?
  userId      String
  type        String    // script_generate, dialogue_enhance, voice_generate, image_generate, video_compose
  status      String    @default("pending") // pending, processing, completed, failed
  input       String?   @db.Text // JSON
  output      String?   @db.Text // JSON
  error       String?   @db.Text
  progress    Int       @default(0) // 0-100
  cost        Int       @default(0)
  startedAt   DateTime?
  completedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  script  Script?  @relation(fields: [scriptId], references: [id], onDelete: SetNull)
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([scriptId])
  @@map("ai_jobs")
}

// ============================================
// 视频生成
// ============================================

// 视频片段
model VideoSegment {
  id              String    @id @default(cuid())
  scriptId        String
  episodeNum      Int       // 对应 ScriptScene.episodeNum
  segmentIndex    Int       // 片段序号 0-based
  durationSec     Int       @default(15)
  prompt          String    @db.Text
  shotType        String?   // wide | medium | close-up | extreme-close-up
  cameraMove      String?   // static | pan | tilt | dolly | tracking | orbit
  referenceImages String[]
  referenceVideo  String?

  // 生成参数
  model           String?   // seedance_2_0 | seedance_1_5_pro | jimeng_3_0_pro | jimeng_3_0 | jimeng_s2_pro
  resolution      String?   // 1080p | 720p

  // 生成结果
  status          String    @default("pending") // pending | reserved | submitted | generating | done | failed
  providerTaskId  String?
  videoUrl        String?
  thumbnailUrl    String?
  tokenCost       Int?
  apiCostCents    Int?
  errorMessage    String?

  createdAt       DateTime  @default(now())
  completedAt     DateTime?

  script          Script    @relation(fields: [scriptId], references: [id], onDelete: Cascade)

  @@unique([scriptId, episodeNum, segmentIndex])
  @@index([scriptId])
  @@index([scriptId, episodeNum])
  @@index([status])
  @@map("video_segments")
}

// ============================================
// 金币系统（预扣/确认/退还）
// ============================================

// 用户金币余额
model UserBalance {
  id             String @id @default(cuid())
  userId         String @unique
  balance        Int    @default(0)     // 当前可用余额
  reserved       Int    @default(0)     // 预扣冻结
  totalPurchased Int    @default(0)     // 累计充值
  totalConsumed  Int    @default(0)     // 累计消耗

  user           User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_balances")
}

// 金币交易记录
model TokenTransaction {
  id          String   @id @default(cuid())
  userId      String
  type        String   // purchase | consume | refund | reserve | release | bonus
  amount      Int      // 正数=增加，负数=减少
  balanceAfter Int
  description String?
  metadata    Json?    // {model, resolution, segmentId, stripePaymentId, ...}
  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([type])
  @@map("token_transactions")
}

// ============================================
// 发布 & 社区
// ============================================

// 已发布的作品（关联 Script）
model PublishedScript {
  id              String    @id @default(cuid())
  scriptId        String    @unique
  userId          String
  status          String    @default("published") // published | featured | unlisted
  publishedAt     DateTime  @default(now())
  viewCount       Int       @default(0)
  likeCount       Int       @default(0)
  commentCount    Int       @default(0)
  ratingSum       Int       @default(0)
  ratingCount     Int       @default(0)
  recommendScore  Float     @default(0)
  tags            String[]
  featuredAt      DateTime?

  script          Script          @relation(fields: [scriptId], references: [id], onDelete: Cascade)
  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  achievementCard AchievementCard?

  @@index([userId])
  @@index([status, recommendScore])
  @@index([publishedAt])
  @@map("published_scripts")
}

// ============================================
// 成就卡系统
// ============================================

// 成就卡
model AchievementCard {
  id                String    @id @default(cuid())
  userId            String
  publishedScriptId String    @unique // 每部剧只有一张成就卡
  cardImage         String    // 卡面图片 URL（窄版封面 coverTall）
  rarity            String    @default("common") // common | rare | epic | legendary
  title             String    // 剧名
  subtitle          String?   // 副标题（如 "First Creation" "10-Episode Epic"）
  earnedAt          DateTime  @default(now())
  viewCount         Int       @default(0) // 被浏览次数

  user              User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  publishedScript   PublishedScript @relation(fields: [publishedScriptId], references: [id], onDelete: Cascade)

  @@index([userId, earnedAt])
  @@map("achievement_cards")
}
